!!!
%html.no-js
  %head
    %title= @page_title or CenatusCms::Application::SITE_NAME

    -#= auto_discovery_link_tag ""
    
    = stylesheet_link_tag :application

    /[if lt IE 8]
      = stylesheet_link_tag 'ie.css', :media => 'screen, projection'

    %meta{:property => "og:title",  :content => @og_title}
    %meta{:property => "og:type", :content => @og_type}
    %meta{:property => "og:url", :content => @og_url}
    %meta{:property => "og:image", :content => @og_image}
    %meta{:property => "og:site_name", :content => @og_site_name}
    %meta{:property => "fb:admins", :content => @og_admins}

    = javascript_include_tag :application

    %script{:src => "http://s7.addthis.com/js/250/addthis_widget.js#pubid=ra-4e8084886b4e0697", :type => "text/javascript"}

    - if request.host == "localhost"
      %link{:rel => "stylesheet", :href => "http://f.fontdeck.com/s/css/0YqsPiW6g63C2r0wLfl2RFAC0Vc/localhost/11846.css", :type => "text/css"}
    - else
      %link{:rel => "stylesheet", :href => "http://f.fontdeck.com/s/css/0YqsPiW6g63C2r0wLfl2RFAC0Vc/artist-showcase.herokuapp.com/11846.css", :type => "text/css"}
    %link{:href => "http://fonts.googleapis.com/css?family=Droid+Sans+Mono", :rel => "stylesheet", :type => "text/css"}

    -#:javascript
