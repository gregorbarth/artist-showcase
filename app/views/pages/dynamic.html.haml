%section#home
  - if @home_section.present?
    .wrapper
      .left-col
        %h1= "Intro"
      %article
        #slider
          %ul
            - for asset in @home_section.assets do
              %li
                = image_tag(asset.asset.url(:original), :alt => asset.description)
        - for content_area in @home_section.content_areas do
          %h2= content_area.name
          :textile
            #{content_area.content}
      %aside
        %ul
          %li
            %h4
